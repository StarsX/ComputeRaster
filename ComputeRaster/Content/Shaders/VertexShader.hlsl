//--------------------------------------------------------------------------------------
// Structures
//--------------------------------------------------------------------------------------
struct VSIn
{
	float3	Pos	: POSITION;
	float3	Nrm	: NORMAL;
};

struct VSOut
{
	float4 Pos;
};

cbuffer cb
{
	matrix g_worldViewProj;
};

//--------------------------------------------------------------------------------------
// Vertex shader
//--------------------------------------------------------------------------------------
VSOut main(VSIn input)
{
	VSOut output;

	output.Pos = float4(input.Pos, 1.0);
	output.Pos = mul(output.Pos, g_worldViewProj);

	return output;
}
